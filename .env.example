# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-me

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
# Pro PrintMaster přidej: https://printmaster.example.com
# Více origin oddělených čárkami: https://example1.com,https://example2.com
CORS_ORIGINS=*

# Rate Limiting
# Formát: "počet per jednotka" (minute, hour, day)
RATE_LIMIT=100 per minute

# Redis URL pro rate limiting (volitelné, pokud nepoužíváš Redis, použije se in-memory)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
